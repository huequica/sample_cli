{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["@types/jest"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}